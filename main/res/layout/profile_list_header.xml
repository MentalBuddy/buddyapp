<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:background="@android:color/white">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profile_image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/peter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:id="@+id/profile_description"
        android:layout_alignTop="@+id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:maxLines="6"
        android:minHeight="112dp"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="Peter Griffin"
        android:id="@+id/profile_name"
        android:layout_below="@+id/profile_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/profile_description_edit_button"
        android:layout_below="@+id/profile_description"
        android:background="@drawable/edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_description_edit_button"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/profile_gridlayout">

        <!-- First Row-->
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB"
            android:textColor="@android:color/black"
            android:id="@+id/profile_dob"
            android:layout_below="@+id/profile_name"
            android:textSize="16sp"
            android:layout_row="1"
            android:layout_marginLeft="16dp"
            android:layout_column="0" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender"
            android:textColor="@android:color/black"
            android:id="@+id/profile_gender"
            android:layout_below="@+id/profile_name"
            android:textSize="16sp"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginLeft="16dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="race"
            android:textColor="@android:color/black"
            android:id="@+id/profile_race"
            android:layout_below="@+id/profile_name"
            android:textSize="16sp"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_marginLeft="16dp"/>

        <TextView  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sexuality"
            android:textColor="@android:color/black"
            android:id="@+id/profile_sexuality"
            android:layout_below="@+id/profile_name"
            android:textSize="16sp"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_marginLeft="16dp"/>

    <!-- Second Row-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/06/1989"
            android:textColor="@android:color/black"
            android:id="@+id/profile_dob_value"
            android:textSize="16sp"
            android:layout_column="0"
            android:maxLength="10"
            android:ellipsize="end"
            android:layout_row="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="@android:color/black"
            android:id="@+id/profile_gender_value"
            android:layout_below="@+id/profile_name"
            android:textSize="16sp"
            android:layout_column="2"
            android:layout_row="2"
            android:maxLength="14"
            android:ellipsize="end"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asian"
            android:textColor="@android:color/black"
            android:id="@+id/profile_race_value"
            android:layout_below="@+id/profile_name"
            android:textSize="16sp"
            android:layout_column="3"
            android:layout_row="2"
            android:maxLength="6"
            android:ellipsize="end"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sexuality"
            android:textColor="@android:color/black"
            android:id="@+id/profile_sexuality_value"
            android:layout_below="@+id/profile_name"
            android:textSize="16sp"
            android:layout_column="4"
            android:layout_row="2"
            android:maxLength="6"
            android:ellipsize="end"
            android:layout_marginLeft="16dp"/>


        <!-- Third Row-->

        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/profile_dob_edit_button"
            android:background="@drawable/edit"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/profile_gender_edit_button"
            android:background="@drawable/edit"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/profile_race_edit_button"
            android:background="@drawable/edit"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/profile_sexuality_edit_button"
            android:background="@drawable/edit"
            android:layout_column="4"
            android:layout_row="3"
            android:layout_gravity="center"/>
    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/done"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profile_gridlayout"/>


</RelativeLayout>